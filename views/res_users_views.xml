<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id='session_button' model='ir.ui.view'>

    <field name='name'>user.session.button</field>
    <field name='model'>res.users</field>
    <field name='inherit_id' ref="base.view_users_form"></field>
    <field name='arch' type='xml'>
            <xpath expr="//div[@name='button_box']" position='inside'>
            <button type="object"
					name="user_session_button_action"
					class="oe_stat_button"
                            invisible='session_nb==0'
                            icon="fa-calendar">
						<field name='session_nb' widget='statinfo' string='Sessions'></field>
						</button>
            </xpath>
            <xpath expr='//notebook' position='inside'>
                <page name='student_info' string='Student Info' invisible="gems_role!='student'">
                    <group>
                        <field name='dob'></field>
                        <field name="age"/>
                        <field name='gender'></field>
                    </group>

            

                </page>


            </xpath>
            <xpath expr="//page" position='inside'>
                <group string="Gems Education">
                <field name="gems_role"/>
                </group>
            </xpath>


</field>
    </record> 
</odoo>
