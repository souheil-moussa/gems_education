<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gems_session_form_view" model="ir.ui.view">
        <field name="name">gems.session.form.view</field>
        <field name="model">gems.session</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="GEMS Session">
                <sheet>
                    <group>
                        <group>
                            <field name="subject_id"/>
                            <field name="teacher_id"/>
                            <field name="school_id"/>
                        </group>
                        <group>
                            <field name="classroom_id"/>
                            <field name ="grade"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Date and Time">
                            <group>
                                <field name="year"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="start_time" widget="float_time"/>
                                <field name="end_time" widget="float_time"/>
                            </group>
                        </page>

                        <page string="Students">
                            <field name="student_ids">
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="gems_session_list_view" model="ir.ui.view">
        <field name="name">gems.session.list.view</field>
        <field name="model">gems.session</field>
        <field name="arch" type="xml">
            <list>
                <field name="subject_id"/>
                <field name="classroom_id"/>
                <field name="school_id"/>
                <field name="teacher_id"/>
                <field name="year"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>


    <record id="gems_session_root" model="ir.ui.menu">
        <field name="name">Gems Education</field>
        <field name="web_icon">gems_education,static/description/icon.png</field>
    </record>

    <record id="gems_session_action" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">gems.session</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new session
            </p>
        </field>
    </record>

    <menuitem name="Sessions" id="gems_session_menu" action="gems_session_action" parent="gems_session_root" sequence="0"/>

</odoo>
