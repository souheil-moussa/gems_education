<odoo>
    <record id="view_school_classroom_form" model="ir.ui.view">
        <field name="name">school.classroom.form</field>
        <field name="model">gems.classroom</field>
        <field name="arch" type="xml">
            <form string="Classroom">
                <sheet>
                    <group>
                        <field name="school_id"/>
                        <field name="name"/>
                        <field name="capacity"/>
                        <field name="has_projector"/>
                        <field name="has_smart_board"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_school_classroom_list" model="ir.ui.view">
        <field name="name">school.classroom.list</field>
        <field name="model">gems.classroom</field>
        <field name="arch" type="xml">
            <list string="Classrooms">
                <field name="school_id"/>
                <field name="name"/>
                <field name="capacity"/>
                <field name="has_projector"/>
                <field name="has_smart_board"/>
            </list>
        </field>
    </record>

    <record id="action_school_classroom" model="ir.actions.act_window">
        <field name="name">Classrooms</field>
        <field name="res_model">gems.classroom</field>
        <field name="view_mode">list,form</field>
    </record>




    <record id="view_school_subject_form" model="ir.ui.view">
        <field name="name">school.subject.form</field>
        <field name="model">gems.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <sheet>
                    <group>
                        <field name="school_id"/>
                        <field name="name"/>
                        <field name="book"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_school_subject_list" model="ir.ui.view">
        <field name="name">school.subject.list</field>
        <field name="model">gems.subject</field>
        <field name="arch" type="xml">
            <list string="Subjects">
                <field name="school_id"/>
                <field name="name"/>
                <field name="book"/>
            </list>
        </field>
    </record>

    <record id="action_school_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">gems.subject</field>
        <field name="view_mode">list,form</field>
    </record>

        <menuitem id="menu_school_root"
              name="School Management"
              parent="gems_session_root"
              sequence="1"/>

    <menuitem id="menu_school_classroom"
              name="Classrooms"
              parent="menu_school_root"
              action="action_school_classroom"
              sequence="1"/>

    <menuitem id="menu_school_subject"
              name="Subjects"
              parent="menu_school_root"
              action="action_school_subject"
              sequence="2"/>

</odoo>
