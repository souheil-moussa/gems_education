<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_grade_tree" model="ir.ui.view">
        <field name="name">school.grade.tree</field>
        <field name="model">gems.grade</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="school_id"/>
            </list>
        </field>
    </record>

    <record id="view_grade_form" model="ir.ui.view">
        <field name="name">school.grade.form</field>
        <field name="model">gems.grade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="school_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_grade" model="ir.actions.act_window">
        <field name="name">Grades</field>
        <field name="res_model">gems.grade</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_grade" name="Grades" parent="menu_school_root" action="action_grade"/>

</odoo>
